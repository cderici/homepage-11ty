{% set imgSrc = profileImage or "/assets/img/mainProfile.jpg" %}
{% set imgSrcMin = profileImageMin or imgSrc %}
<div class="left-card w3-card-4 w3-round-xlarge">
  <div class="w3-display-container" style="overflow:hidden">
    <a href="{{ imgSrc }}" data-lightbox="profil">
      <img src="{{ imgSrcMin }}" class="w3-round-xlarge" style="width:100%" alt="Avatar" />
    </a>
    <div class="w3-display-bottomleft w3-container w3-text-black">
      <h2 class="w3-text-white">{{ site.title }}</h2>
    </div>
  </div>

  <div class="w3-container">
    <p><i class="fa fa-home fa-fw w3-margin-right w3-large w3-text-deep-orange"></i>{{ site.location }}</p>
    <p><i class="fa fa-github fa-fw w3-margin-right w3-large w3-text-deep-orange"></i>
      <a href="https://github.com/{{ site.social.github }}" target="_blank" style="border-bottom:0"> {{ site.social.github }}</a>
    </p>
    <p><i class="fa fa-link fa-fw w3-margin-right w3-large w3-text-deep-orange"></i>
      <a href="{{ site.links.website }}" target="_blank" style="border-bottom:0">dericilab.live</a>
    </p>
    <p><i class="fa fa-envelope fa-fw w3-margin-right w3-large w3-text-deep-orange"></i>
      <a href="mailto:{{ site.email }}" target="_blank" style="border-bottom:0">{{ site.email }}</a>
    </p>

    <div class="w3-container w3-center">
      <p>
        <a href="http://twitch.tv/{{ site.social.twitch }}" target="_blank" style="border-bottom:0"><i class="fa fa-twitch w3-margin-right w3-hover-opacity w3-large w3-text-deep-orange"></i></a>
        <a href="https://www.youtube.com/channel/{{ site.social.youtube }}" target="_blank" style="border-bottom:0"><i class="fa fa-youtube w3-margin-right w3-hover-opacity w3-large w3-text-deep-orange"></i></a>
        <a href="https://www.facebook.com/caner.derici.3" target="_blank" style="border-bottom:0"><i class="fa fa-facebook-official w3-margin-right w3-hover-opacity w3-large w3-text-deep-orange"></i></a>
        <a href="https://www.instagram.com/{{ site.social.instagram }}/" target="_blank" style="border-bottom:0"><i class="fa fa-instagram w3-margin-right w3-hover-opacity w3-large w3-text-deep-orange"></i></a>
        <a href="https://tr.linkedin.com/in/{{ site.social.linkedin }}" target="_blank" style="border-bottom:0"><i class="fa fa-linkedin w3-margin-right w3-hover-opacity w3-large w3-text-deep-orange"></i></a>
        <a href="https://twitter.com/{{ site.social.twitter }}" target="_blank" style="border-bottom:0"><i class="fa fa-twitter w3-margin-right w3-hover-opacity w3-large w3-text-deep-orange"></i></a>
      </p>
    </div>
  </div>
</div>

<br>
<a href="#" class="back-to-top" style="border-bottom:0">
  <i class="fa fa-chevron-circle-up w3-text-deep-orange w3-xlarge"></i>
</a>

